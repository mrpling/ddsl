{
  "name": "ddsl",
  "version": "0.3.0",
  "description": "DDSL â€” a declarative language for describing sets of domain names",
  "keywords": ["domain", "dsl", "dns", "domain-names", "parser"],
  "author": "Andrew Brier",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrpling/ddsl.git"
  },
  "bugs": { "url": "https://github.com/mrpling/ddsl/issues" },
  "publishConfig": { "access": "public" },
  "homepage": "https://ddsl.app",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }    
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "spec.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "build:browser": "tsup src/index.ts --format iife --global-name DDSL --outDir site --no-dts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  }
}
